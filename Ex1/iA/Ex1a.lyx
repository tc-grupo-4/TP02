\begin_layout Subsection
Impedancia de entrada
\end_layout

\begin_layout Standard
Consecuentemente, se nos instó a calcular la impedancia de entrada vista
 por el generador hacia nuestro circuito.
 Nuevamente, utilizando las ecuaciones descriptas en la previa subseccion,
 y operando adecuadamente, llegamos a que la impedancia de entrada es la
 descripta en la ecuación (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:1_a_2"

\end_inset

).
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
K=\frac{R_{2}a_{0}\omega_{p}(R_{3}+R_{1})-\omega_{p}(a_{0}-1)\left(R_{2}R_{3}+R_{1}R_{2}+R_{1}R_{3}\right)}{R_{2}a_{0}\omega_{p}-\left(R_{2}+R_{3}\right)\omega_{p}\left(a_{0}-1\right)}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
C=\frac{\omega_{p}(a_{0}-1)\left(R_{2}R_{3}+R_{1}R_{2}+R_{1}R_{3}\right)-R_{2}a_{0}\omega_{p}\left(R_{3}+R_{1}\right)}{\left(R_{2}R_{3}+R_{1}R_{2}+R_{1}R_{3}\right)}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
L=\frac{\left(R_{2}+R_{3}\right)\omega_{p}\left(a_{0}-1\right)-R_{2}a_{0}\omega_{p}}{R_{2}+R_{3}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\Rightarrow Z_{in}=K\,\frac{1+\frac{s}{C}}{1+\frac{s}{L}}\label{eq:1_a_2}
\end{equation}

\end_inset


\end_layout

